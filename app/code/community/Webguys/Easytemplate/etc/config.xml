<?xml version="1.0"?>
<config>
    <modules>
        <Webguys_Easytemplate>
            <version>1.0.0.6</version>
        </Webguys_Easytemplate>
    </modules>
    <global>
        <helpers>
            <easytemplate>
                <class>Webguys_Easytemplate_Helper</class>
            </easytemplate>
        </helpers>
        <blocks>
            <easytemplate>
                <class>Webguys_Easytemplate_Block</class>
            </easytemplate>
        </blocks>
        <models>
            <easytemplate>
                <class>Webguys_Easytemplate_Model</class>
                <resourceModel>easytemplate_resource</resourceModel>
            </easytemplate>
            <easytemplate_resource>
                <class>Webguys_Easytemplate_Model_Resource</class>
                <entities>
                    <template>
                        <table>easytemplate</table>
                    </template>
                    <group>
                        <table>easytemplate_group</table>
                    </group>

                    <template_data_varchar>
                        <table>easytemplate_data_varchar</table>
                    </template_data_varchar>
                    <template_data_text>
                        <table>easytemplate_data_text</table>
                    </template_data_text>
                    <template_data_int>
                        <table>easytemplate_data_int</table>
                    </template_data_int>
                    <template_data_datetime>
                        <table>easytemplate_data_datetime</table>
                    </template_data_datetime>
                    <template_data_decimal>
                        <table>easytemplate_data_decimal</table>
                    </template_data_decimal>
                </entities>
            </easytemplate_resource>
            <cms>
                <rewrite>
                    <block>Webguys_Easytemplate_Model_Cms_Block</block>
                </rewrite>
            </cms>
        </models>
        <resources>
            <easytemplate_setup>
                <setup>
                    <module>Webguys_Easytemplate</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
            </easytemplate_setup>
        </resources>
        <cache>
            <types>
                <easytemplate>
                    <label>Easytemplate Output</label>
                    <description>Unit test case file paths cache.</description>
                    <tags>EASYTEMPLATE</tags>
                </easytemplate>
            </types>
        </cache>
    </global>
    <frontend>
        <events>
            <cms_page_render>
                <observers>
                    <webguys_easytemplate>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>cms_page_render</method>
                    </webguys_easytemplate>
                </observers>
            </cms_page_render>
            <core_block_abstract_to_html_before>
                <observers>
                    <easytemplate_core_block_abstract_to_html_after>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>core_block_abstract_to_html_before</method>
                    </easytemplate_core_block_abstract_to_html_after>
                </observers>
            </core_block_abstract_to_html_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <easytemplate_core_block_abstract_to_html_after>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>core_block_abstract_to_html_after</method>
                    </easytemplate_core_block_abstract_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
        <layout>
            <updates>
                <easytemplate>
                    <file>webguys/easytemplate.xml</file>
                </easytemplate>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <events>
            <adminhtml_cms_page_edit_tab_main_prepare_form>
                <observers>
                    <easytemplate_adminhtml_cms_page_edit_tab_main_prepare_form>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>adminhtml_cms_prepare_form</method>
                    </easytemplate_adminhtml_cms_page_edit_tab_main_prepare_form>
                </observers>
            </adminhtml_cms_page_edit_tab_main_prepare_form>
            <easytemplate_adminhtml_cms_block_edit_tab_main_prepare_form>
                <observers>
                    <easytemplate_adminhtml_cms_block_edit_tab_main_prepare_form>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>adminhtml_cms_prepare_form</method>
                    </easytemplate_adminhtml_cms_block_edit_tab_main_prepare_form>
                </observers>
            </easytemplate_adminhtml_cms_block_edit_tab_main_prepare_form>
            <adminhtml_block_html_before>
                <observers>
                    <easytemplate_adminhtml_block_html_before>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>adminhtml_block_html_before</method>
                    </easytemplate_adminhtml_block_html_before>
                </observers>
            </adminhtml_block_html_before>
            <cms_page_save_commit_after>
                <observers>
                    <easytemplate_cms_page_save_commit_after>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>cms_page_save_commit_after</method>
                    </easytemplate_cms_page_save_commit_after>
                </observers>
            </cms_page_save_commit_after>
            <cms_block_save_commit_after>
                <observers>
                    <easytemplate_cms_block_save_commit_after>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>cms_block_save_commit_after</method>
                    </easytemplate_cms_block_save_commit_after>
                </observers>
            </cms_block_save_commit_after>
            <adminhtml_catalog_category_tabs>
                <observers>
                    <easytemplate_adminhtml_catalog_category_tabs>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>adminhtml_catalog_category_tabs</method>
                    </easytemplate_adminhtml_catalog_category_tabs>
                </observers>
            </adminhtml_catalog_category_tabs>
            <catalog_category_save_commit_after>
                <observers>
                    <easytemplate_catalog_category_save_commit_after>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>catalog_category_save_commit_after</method>
                    </easytemplate_catalog_category_save_commit_after>
                </observers>
            </catalog_category_save_commit_after>
            <cms_page_delete_commit_after>
                <observers>
                    <easytemplate_cms_page_delete_commit_after>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>cms_page_delete_commit_after</method>
                    </easytemplate_cms_page_delete_commit_after>
                </observers>
            </cms_page_delete_commit_after>
            <catalog_category_delete_commit_after>
                <observers>
                    <easytemplate_catalog_category_delete_commit_after>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>catalog_category_delete_commit_after</method>
                    </easytemplate_catalog_category_delete_commit_after>
                </observers>
            </catalog_category_delete_commit_after>
            <cms_block_delete_commit_after>
                <observers>
                    <easytemplate_cms_block_delete_commit_after>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>cms_block_delete_commit_after</method>
                    </easytemplate_cms_block_delete_commit_after>
                </observers>
            </cms_block_delete_commit_after>
        </events>
        <layout>
            <updates>
                <easytemplate>
                    <file>webguys/easytemplate.xml</file>
                </easytemplate>
            </updates>
        </layout>
        <translate>
            <modules>
                <easytemplate>
                    <files>
                        <default>Webguys_Easytemplate.csv</default>
                    </files>
                </easytemplate>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <easytemplate before="Mage_Adminhtml">Webguys_Easytemplate_Adminhtml</easytemplate>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <phpunit>
        <suite>
            <modules>
                <Webguys_Easytemplate/>
            </modules>
        </suite>
    </phpunit>
    <default>
        <easytemplate>
            <configuration>
                <use_in_categories>1</use_in_categories>
                <custom_output_in_category>0</custom_output_in_category>
                <automatically_clean_database>0</automatically_clean_database>
                <cache_lifetime>5</cache_lifetime>
            </configuration>
        </easytemplate>
    </default>
</config>
